# Сборка проекта
build:
    ./gradlew.bat build

# Очистка
clean:
    ./gradlew.bat clean

# Запуск тестов
test:
    ./gradlew.bat test

# Запуск приложения
run:
    ./gradlew.bat bootRun

# Создание wrapper
wrapper:
    ./gradlew.bat wrapper

# Помощь
help:
    @echo "Makefile команды:"
    @echo "  build - сборка проекта"
    @echo "  clean - очистка"
    @echo "  test - запуск тестов"
    @echo "  run - запуск приложения"
    @echo "  wrapper - создание gradle wrapper"